<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/md_text_white"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Куда хотите сохранять?"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/select.in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Внутренняя память"
        android:textColor="@color/md_black_1000"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/md_blue_grey_200"></RelativeLayout>

    <TextView
        android:id="@+id/select.sd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SD card"
        android:textColor="@color/md_black_1000"
        android:textSize="18sp" />

</LinearLayout>